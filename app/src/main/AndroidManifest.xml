<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pharma">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Webview">
        <activity
            android:name=".activity.signup.activity.SignUpActivity"
            android:exported="false" />
        <activity
            android:name="com.pharma.activity.otp.OtpActivity"
            android:exported="false" />
        <activity
            android:name="com.pharma.activity.login.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.pharma.activity.welcome.activity.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name="com.pharma.activity.home.activity.HomeActivity"
            android:exported="false" />
        <activity
            android:name="com.pharma.activity.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>